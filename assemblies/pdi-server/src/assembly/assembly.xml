<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>client</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${resources.directory}/webapps</directory>
            <outputDirectory>webspoon/webapps</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${resources-filtered.directory}</directory>
            <outputDirectory>webspoon</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${tomcat.directory}/bin</directory>
            <outputDirectory>webspoon/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${tomcat.directory}/bin</directory>
            <outputDirectory>webspoon/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${tomcat.directory}</directory>
            <outputDirectory>webspoon</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>
